{
    "manifest_version": 3,
    "name": "Gemini Python Server Assistant",
    "version": "1.0",
    "description": "An extension to interact with the Gemini AI via a local Python server.",
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["http://127.0.0.1:5000/"]
}
